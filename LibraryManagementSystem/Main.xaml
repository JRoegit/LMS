<Page x:Class="LibraryManagementSystem.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManagementSystem"
      mc:Ignorable="d" 
      d:DesignHeight="230" d:DesignWidth="400"
      Title="Main">
    
    <Grid Background="Lavender">
        <Button Content="Sign Out" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5" MinWidth="65" Height="25" Background="Transparent" Click="Sign_Out_Button_Click" 
        BorderBrush="Transparent" Foreground="DodgerBlue"/>
        <StackPanel Orientation="Horizontal" Height="36" VerticalAlignment="Top">
            <Button Content="Library" Margin="5,0,0,0" MinWidth="65" Background="White" Click="Library_Button_Click"/>
            <Button Content="My Books" Margin="5,0,0,0" MinWidth="65" Background="White" Click="My_Books_Button_Click"/>
        </StackPanel>
        <Frame x:Name="MainPage" Margin="0,35,0,0" NavigationUIVisibility="Hidden" BorderThickness="1" BorderBrush="Gray" Source="Library.xaml"/>

    </Grid>
</Page>
