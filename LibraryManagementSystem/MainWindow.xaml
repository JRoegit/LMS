<Window x:Class="LibraryManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem"
        mc:Ignorable="d"
        Title="LMS" Height="230" Width="400"
        ResizeMode="NoResize"
        Icon="/Images/icon.png"
        >
    <Grid Background="Lavender">
        <StackPanel Orientation="Horizontal" Height="36" VerticalAlignment="Top">
            <Button Content="Library" Margin="5,0,0,0" MinWidth="65" Background="White" Click="Library_Button_Click"/>
            <Button Content="My Books" Margin="5,0,0,0" MinWidth="65" Background="White" Click="My_Books_Button_Click"/>
        </StackPanel>
        <Frame x:Name="Main" Margin="0,35,0,0" NavigationUIVisibility="Hidden" BorderThickness="1" BorderBrush="Gray" Source="Library.xaml"/>
    </Grid>
</Window>
